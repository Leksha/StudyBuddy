<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="uw.studybuddy">

    <!-- These permissions are required to download data from the UW Open Data Servers -->
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/main_logo"
        android:label="@string/app_name"
        android:roundIcon="@drawable/main_logo"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity android:name=".LoginAndRegistration.LoginActivity" />
        <activity android:name=".LoginAndRegistration.RegisterActivity" />
        <activity android:name=".LoginAndRegistration.Confirmation" />
        <activity android:name=".LoginAndRegistration.SetUpProfile" />
        <activity android:name=".Events.EventCreation" />
        <activity android:name=".LoginAndRegistration.ForgetPassword" />
        <activity android:name=".LoginAndRegistration.ResetPassword" />
        <activity android:name=".LoginAndRegistration.StudyBuddyWelcome">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".FriendList" />
        <activity android:name=".Events.EventDescription"></activity>
    </application>

</manifest>