<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="uw.studybuddy">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity android:name=".LoginAndRegistration.LoginActivity"></activity>
        <activity android:name=".LoginAndRegistration.RegisterActivity" />
        <activity android:name=".LoginAndRegistration.Confirmation" />
        <activity android:name=".LoginAndRegistration.SetUpProfile" >
        </activity>
        <activity android:name=".Events.EventCreation" />
        <activity android:name=".LoginAndRegistration.ForgetPassword" />
        <activity android:name=".LoginAndRegistration.ResetPassword" />
        <activity android:name=".UserProfile.UserProfileActivity" />
        <activity android:name=".LoginAndRegistration.StudyBuddyWelcome">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".FriendList"></activity>
    </application>

</manifest>