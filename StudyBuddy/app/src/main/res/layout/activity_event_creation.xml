<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                             xmlns:app="http://schemas.android.com/apk/res-auto"
                                             xmlns:tools="http://schemas.android.com/tools"
                                             android:layout_width="match_parent"
                                             android:layout_height="match_parent"
                                             tools:context="uw.studybuddy.Events.EventCreation"
                                             android:background="@drawable/flower"
                                             tools:layout_editor_absoluteY="81dp"
                                             tools:layout_editor_absoluteX="0dp">


    <TextView
        android:id="@+id/textView"
        android:layout_width="368dp"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="New Event"
        android:textSize="40dp"
        android:typeface="serif"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="8dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"/>

    <Spinner
        android:id="@+id/course_create_spinner"
        android:layout_width="292dp"
        android:layout_height="31dp"
        android:hint="  Course"
        android:textAlignment="textStart"
        android:background="@color/white"
        android:layout_marginTop="23dp"
        app:layout_constraintTop_toBottomOf="@+id/textView"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"/>


    <EditText
        android:id="@+id/location_create"
        android:layout_width="292dp"
        android:layout_height="31dp"
        android:background="@color/white"
        android:fontFamily="sans-serif"
        android:hint="  Location"
        android:textAlignment="textStart"
        android:textAppearance="@style/TextAppearance.AppCompat.Body2"
        android:textSize="18sp"
        android:typeface="serif"
        android:layout_marginTop="22dp"
        app:layout_constraintTop_toBottomOf="@+id/course_create_spinner"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"/>

    <EditText
        android:id="@+id/subject_create"
        android:layout_width="292dp"
        android:layout_height="31dp"
        android:background="@color/white"
        android:fontFamily="sans-serif"
        android:hint="  Title"
        android:textAlignment="textStart"
        android:textAppearance="@style/TextAppearance.AppCompat.Body2"
        android:textSize="18sp"
        android:typeface="serif"
        android:layout_marginTop="22dp"
        app:layout_constraintTop_toBottomOf="@+id/location_create"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"/>

    <EditText
        android:id="@+id/description_create"
        android:layout_width="292dp"
        android:layout_height="31dp"
        android:background="@color/white"
        android:fontFamily="sans-serif"
        android:hint="  Description (optional)"
        android:textAlignment="textStart"
        android:textAppearance="@style/TextAppearance.AppCompat.Body2"
        android:textSize="18sp"
        android:typeface="serif"
        android:layout_marginTop="21dp"
        app:layout_constraintTop_toBottomOf="@+id/subject_create"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"/>

    <TextView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="Your Event will Begin at :"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="18sp"
        android:textStyle="bold"
        android:typeface="serif"
        android:id="@+id/textView2"
        android:layout_marginTop="17dp"
        app:layout_constraintTop_toBottomOf="@+id/description_create"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintHorizontal_bias="0.0"/>

    <TextView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="TEXTO FOR DEFEITO"
        android:textAlignment="center"
        android:typeface="serif"
        android:textSize="20dp"
        android:id="@+id/Text_date_time"

        android:layout_marginTop="18dp"
        app:layout_constraintTop_toBottomOf="@+id/textView2"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"/>

    <Button
        android:id="@+id/btn_datePicker"
        android:layout_width="133dp"
        android:layout_height="51dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginLeft="34dp"
        android:layout_marginTop="18dp"
        android:backgroundTint="@color/white"
        android:fontFamily="serif"
        android:text="Set Date"
        android:typeface="serif"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/Text_date_time"
        android:layout_marginStart="34dp"/>

    <Button
        android:id="@+id/btn_timePicker"
        android:layout_width="133dp"
        android:layout_height="51dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginRight="41dp"
        android:layout_marginTop="18dp"
        android:backgroundTint="@color/white"
        android:fontFamily="serif"
        android:text="Set Time"
        android:typeface="serif"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/Text_date_time"
        app:layout_constraintLeft_toRightOf="@+id/btn_datePicker"
        android:layout_marginLeft="8dp"
        app:layout_constraintHorizontal_bias="1.0"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="41dp"/>

    <Button
        android:id="@+id/btn_confirm_event_setup"
        android:layout_width="133dp"
        android:layout_height="51dp"
        android:layout_gravity="center_horizontal"
        android:fontFamily="serif"
        android:onClick="GoYouEventList"
        android:text="Create"
        android:typeface="serif"
        android:backgroundTint="@color/white"

        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintHorizontal_bias="0.502"
        android:layout_marginTop="13dp"
        app:layout_constraintTop_toBottomOf="@+id/btn_timePicker"/>

</android.support.constraint.ConstraintLayout>
