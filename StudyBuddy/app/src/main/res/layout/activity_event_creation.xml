<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                             xmlns:app="http://schemas.android.com/apk/res-auto"
                                             xmlns:tools="http://schemas.android.com/tools"
                                             android:layout_width="match_parent"
                                             android:layout_height="match_parent"
                                             tools:context="uw.studybuddy.Events.EventCreation"
                                             android:background="@drawable/flower"
                                             tools:layout_editor_absoluteY="81dp"
                                             tools:layout_editor_absoluteX="0dp">


    <Spinner
        android:id="@+id/course_create_spinner"
        android:layout_width="0dp"
        android:layout_height="37dp"
        android:hint="  Course"
        android:textAlignment="textStart"
        android:background="@drawable/spinner_with_drop_down_icon"
        android:layout_marginLeft="44dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginRight="44dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        tools:layout_constraintTop_creator="1"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintBottom_creator="1"
        android:layout_marginStart="44dp"
        android:layout_marginEnd="44dp"
        tools:layout_constraintLeft_creator="1"
        android:layout_marginBottom="19dp"
        app:layout_constraintBottom_toTopOf="@+id/subject_create"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="8dp"
        app:layout_constraintVertical_bias="0.959" />

    <EditText
        android:id="@+id/subject_create"
        android:layout_width="0dp"
        android:layout_height="40dp"
        android:background="@color/white"
        android:fontFamily="sans-serif"
        android:hint="  Title"
        android:textAlignment="textStart"
        android:textAppearance="@style/TextAppearance.AppCompat.Body2"
        android:textSize="18sp"
        android:typeface="serif"
        android:layout_marginLeft="44dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginRight="44dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        android:layout_marginBottom="22dp"
        app:layout_constraintBottom_toTopOf="@+id/description_create"
        tools:layout_constraintRight_creator="1"
        android:layout_marginStart="44dp"
        android:layout_marginEnd="44dp"
        tools:layout_constraintLeft_creator="1" />

    <EditText
        android:id="@+id/description_create"
        android:layout_width="0dp"
        android:layout_height="36dp"
        android:background="@color/white"
        android:fontFamily="sans-serif"
        android:hint="  Description (optional)"
        android:textAlignment="textStart"
        android:textAppearance="@style/TextAppearance.AppCompat.Body2"
        android:textSize="18sp"
        android:typeface="serif"
        android:layout_marginRight="44dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginLeft="44dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        tools:layout_constraintRight_creator="1"
        android:layout_marginStart="44dp"
        android:layout_marginEnd="44dp"
        tools:layout_constraintLeft_creator="1"
        android:layout_marginBottom="22dp"
        app:layout_constraintBottom_toTopOf="@+id/location_create" />


    <EditText
        android:id="@+id/location_create"
        android:layout_width="221dp"
        android:layout_height="41dp"
        android:background="@color/white"
        android:fontFamily="sans-serif"
        android:hint="  Location"
        android:textAlignment="textStart"
        android:textAppearance="@style/TextAppearance.AppCompat.Body2"
        android:onClick="openMap"
        android:textSize="18sp"
        android:typeface="serif"
        android:layout_marginLeft="44dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginStart="44dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="34dp"
        app:layout_constraintBottom_toTopOf="@+id/textView2" />

    <Button
        android:id="@+id/btn_launchmap"
        android:layout_width="47dp"
        android:layout_height="45dp"
        android:background="@mipmap/gmaps_colour"
        android:layout_marginEnd="55dp"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="319dp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="8dp"
        app:layout_constraintVertical_bias="1.0"
        app:layout_constraintLeft_toRightOf="@+id/location_create"
        android:layout_marginLeft="21dp" />


    <TextView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="Your Event will Begin at :"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="18sp"
        android:textStyle="bold"
        android:typeface="serif"
        android:id="@+id/textView2"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        tools:layout_constraintTop_creator="1"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintBottom_creator="1"
        tools:layout_constraintLeft_creator="1"
        android:layout_marginBottom="20dp"
        app:layout_constraintBottom_toTopOf="@+id/Text_date_time" />

    <TextView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="TEXTO FOR DEFEITO"
        android:textAlignment="center"
        android:typeface="serif"
        android:textSize="20dp"
        android:id="@+id/Text_date_time"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintLeft_creator="1"
        android:layout_marginBottom="27dp"
        app:layout_constraintBottom_toTopOf="@+id/btn_datePicker" />

    <Button
        android:id="@+id/btn_datePicker"
        android:layout_width="133dp"
        android:layout_height="51dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginLeft="34dp"
        android:backgroundTint="@color/white"
        android:fontFamily="serif"
        android:text="Set Date"
        android:typeface="serif"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginStart="34dp"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="139dp"
        android:layout_marginEnd="8dp"
        app:layout_constraintRight_toLeftOf="@+id/btn_timePicker"
        android:layout_marginRight="8dp"
        app:layout_constraintHorizontal_bias="0.0" />

    <Button
        android:id="@+id/btn_timePicker"
        android:layout_width="133dp"
        android:layout_height="51dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginRight="41dp"
        android:backgroundTint="@color/white"
        android:fontFamily="serif"
        android:text="Set Time"
        android:typeface="serif"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginEnd="41dp"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="139dp" />

    <Button
        android:id="@+id/btn_confirm_event_setup"
        android:layout_width="133dp"
        android:layout_height="51dp"
        android:layout_gravity="center_horizontal"
        android:fontFamily="serif"
        android:onClick="GoYouEventList"
        android:text="Create"
        android:typeface="serif"
        android:backgroundTint="@color/white"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="77dp"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintLeft_creator="1"
        app:layout_constraintHorizontal_bias="0.467" />



</android.support.constraint.ConstraintLayout>
