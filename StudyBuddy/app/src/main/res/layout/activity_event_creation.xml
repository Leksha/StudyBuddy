<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="uw.studybuddy.EventCreation"
    android:background="@drawable/flower">


    <TextView
        android:id="@+id/textView"
        android:layout_width="368dp"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="New Event"
        android:textSize="40dp"
        android:typeface="serif"/>

    <EditText
        android:id="@+id/course_create"
        android:layout_width="292dp"
        android:layout_height="31dp"
        android:layout_marginTop="23dp"
        android:background="@color/white"
        android:fontFamily="sans-serif-smallcaps"
        android:hint="  Course"
        android:textAlignment="textStart"
        android:textAppearance="@style/TextAppearance.AppCompat.Body2"
        android:textSize="18sp"
        android:typeface="serif"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView"/>

    <EditText
        android:id="@+id/location_create"
        android:layout_width="292dp"
        android:layout_height="31dp"
        android:layout_marginTop="11dp"
        android:background="@color/white"
        android:fontFamily="sans-serif-smallcaps"
        android:hint="  Location"
        android:textAlignment="textStart"
        android:textAppearance="@style/TextAppearance.AppCompat.Body2"
        android:textSize="18sp"
        android:typeface="serif"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/course_create"/>

    <EditText
        android:id="@+id/subject_create"
        android:layout_width="292dp"
        android:layout_height="31dp"
        android:layout_marginTop="10dp"
        android:background="@color/white"
        android:fontFamily="sans-serif-smallcaps"
        android:hint="  Subject"
        android:textAlignment="textStart"
        android:textAppearance="@style/TextAppearance.AppCompat.Body2"
        android:textSize="18sp"
        android:typeface="serif"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/location_create"/>

    <EditText
        android:id="@+id/description_create"
        android:layout_width="292dp"
        android:layout_height="31dp"
        android:layout_marginTop="13dp"
        android:background="@color/white"
        android:fontFamily="sans-serif-smallcaps"
        android:hint="  Description"
        android:textAlignment="textStart"
        android:textAppearance="@style/TextAppearance.AppCompat.Body2"
        android:textSize="18sp"
        android:typeface="serif"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/subject_create"/>

    <TextView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="19dp"
        android:gravity="center"
        android:text="Your Event will Begin at :"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="18sp"
        android:textStyle="bold"
        android:typeface="serif"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/description_create"
        android:id="@+id/textView2"/>

    <TextView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="TEXTO FOR DEFEITO"
        android:textAlignment="center"
        android:typeface="serif"
        android:textSize="20dp"
        android:layout_marginTop="16dp"
        android:id="@+id/Text_date_time"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView2"

        app:layout_constraintHorizontal_bias="0.0"/>

    <Button
        android:id="@+id/btn_datePicker"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginLeft="34dp"
        android:fontFamily="serif"
        android:text="Set Event Date"
        android:typeface="serif"
        android:backgroundTint="@color/white"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="23dp"
        app:layout_constraintTop_toBottomOf="@+id/Text_date_time"/>

    <Button
        android:id="@+id/btn_timePicker"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginRight="34dp"
        android:fontFamily="serif"
        android:text="Set Start Time"
        android:typeface="serif"
        android:backgroundTint="@color/white"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="23dp"
        app:layout_constraintTop_toBottomOf="@+id/Text_date_time"
        app:layout_constraintLeft_toRightOf="@+id/btn_datePicker"
        android:layout_marginLeft="8dp"
        app:layout_constraintHorizontal_bias="1.0"/>

    <Button
        android:id="@+id/btn_confirm_event_setup"
        android:layout_width="143dp"
        android:layout_height="47dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="8dp"
        android:fontFamily="serif"
        android:onClick="GoYouEventList"
        android:text="Create"
        android:typeface="serif"
        android:backgroundTint="@color/white"
        app:layout_constraintHorizontal_bias="0.502"

        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_datePicker"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="8dp"
        app:layout_constraintVertical_bias="0.065"/>

</android.support.constraint.ConstraintLayout>
