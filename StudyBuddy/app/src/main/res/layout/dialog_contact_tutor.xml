<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical"
              android:layout_marginTop="15dp"
              android:layout_marginLeft="15dp">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp">

        <ImageButton
            android:id="@+id/dialog_contact_phone_button"
            android:layout_width="43dp"
            android:layout_height="43dp"
            app:srcCompat="@mipmap/ic_phone"/>
        <TextView
            android:id="@+id/dialog_contact_phone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="10dp"
            android:text="Phone Number"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginLeft="10dp">

        <ImageButton
            android:id="@+id/dialog_contact_email_button"
            android:layout_width="43dp"
            android:layout_height="43dp"
            app:srcCompat="@mipmap/ic_email"/>

        <TextView
            android:id="@+id/dialog_contact_email"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="10dp"
            android:text="Email "
            android:textAlignment="textStart"/>
    </LinearLayout>

</LinearLayout>
