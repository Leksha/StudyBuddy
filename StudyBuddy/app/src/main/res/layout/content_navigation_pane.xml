<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="uw.studybuddy.NavigationPane"
    tools:showIn="@layout/app_bar_navigation_pane">

    <Button
        android:id="@+id/search_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:text="@string/search_friend_button"
        app:layout_constraintLeft_toRightOf="@+id/find_friend_editText"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="16dp"/>

    <EditText
        android:id="@+id/find_friend_editText"
        android:layout_width="215dp"
        android:layout_height="50dp"
        android:layout_marginLeft="16dp"
        android:ems="10"
        android:inputType="text"
        android:text="@string/find_friend_editText"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginStart="16dp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="16dp"
        android:onClick="@string/clear_search_field"/>


    <TextView
        android:id="@+id/print_friend_info_textView"
        android:layout_width="285dp"
        android:layout_height="366dp"
        android:text="@string/print_friend_info_textView"
        android:gravity="center"
        android:background="@android:color/black"
        android:textColor="@android:color/white"
        android:layout_marginTop="39dp"
        app:layout_constraintTop_toBottomOf="@+id/find_friend_editText"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="8dp"
        app:layout_constraintHorizontal_bias="0.506"
        app:layout_constraintVertical_bias="0.112"/>

</android.support.constraint.ConstraintLayout>
