<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="uw.studybuddy.Events.EventDescription">

    <TextView
        android:id="@+id/edCourse"
        android:layout_width="130dp"
        android:layout_height="30dp"
        android:layout_marginTop="16dp"
        android:text="TextView"
        android:textStyle="bold"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintHorizontal_bias="0.1" />

    <TextView
        android:id="@+id/edTitle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="32dp"
        android:layout_marginLeft="32dp"
        android:layout_marginRight="32dp"
        android:layout_marginStart="32dp"
        android:layout_marginTop="8dp"
        android:fontFamily="serif"
        android:text="TextView"
        android:textStyle="bold"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/edCourse" />

    <TextView
        android:id="@+id/edDescription"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TextView"
        android:layout_marginStart="32dp"
        android:layout_marginTop="19dp"
        app:layout_constraintTop_toBottomOf="@+id/edTitle"
        android:layout_marginLeft="32dp"
        app:layout_constraintLeft_toLeftOf="parent" />


    <TextView
        android:id="@+id/edLocation"
        android:layout_width="160dp"
        android:layout_height="28dp"
        android:layout_weight="1"
        android:text="TextView"
        android:layout_marginTop="17dp"
        app:layout_constraintTop_toBottomOf="@+id/edDescription"
        android:layout_marginLeft="32dp"
        app:layout_constraintLeft_toLeftOf="parent" />

    <Button
        android:id="@+id/btnOpenMap"
        android:layout_width="38dp"
        android:layout_height="38dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="32dp"
        android:layout_weight="0.01"
        android:drawableRight="@android:drawable/ic_dialog_map"
        app:layout_constraintLeft_toRightOf="@+id/edLocation"
        android:layout_marginLeft="32dp"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        android:layout_marginBottom="88dp"
        app:layout_constraintBottom_toTopOf="@+id/edQuestId"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/edTitle"
        app:layout_constraintVertical_bias="1.0" />
        <!--android:onClick="process"-->


    <TextView
        android:id="@+id/edDate"
        android:layout_width="150dp"
        android:layout_height="30dp"
        android:text="TextView"
        android:layout_marginLeft="32dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginStart="32dp"
        android:layout_marginTop="12dp"
        app:layout_constraintTop_toBottomOf="@+id/edLocation"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintHorizontal_bias="0.0" />
        app:layout_constraintHorizontal_bias="0.216"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp" />

    <TextView
        android:id="@+id/edTime"
        android:layout_width="150dp"
        android:layout_height="30dp"
        android:text="TextView"
        android:layout_marginBottom="7dp"
        app:layout_constraintBottom_toTopOf="@+id/textEventCreator"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/edDate"
        app:layout_constraintVertical_bias="0.307"
        android:layout_marginLeft="32dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintHorizontal_bias="0.0" />
        <!--app:layout_constraintTop_toBottomOf="@+id/edLocation"--><![CDATA[
        android:layout_marginEnd="32dp" />

    ]]>

    <TextView
        android:id="@+id/textEventCreator"
        android:layout_width="135dp"
        android:layout_height="20dp"
        android:layout_marginEnd="32dp"
        android:layout_marginStart="32dp"
        android:paddingLeft="16dp"
        android:text="Event Created By:"
        android:textSize="15sp"
        android:textStyle="bold"
        app:layout_constraintVertical_chainStyle="spread"
        app:layout_constraintRight_toLeftOf="@+id/BaddFriend"
        android:layout_marginRight="31dp"
        android:layout_marginTop="49dp"
        app:layout_constraintTop_toBottomOf="@+id/edDate"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintHorizontal_bias="0.857" />

    <TextView
        android:id="@+id/edQuestId"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_marginRight="32dp"
        android:fontFamily="serif"
        android:text="TextView"
        android:textStyle="bold"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginEnd="32dp"
        app:layout_constraintLeft_toRightOf="@+id/textEventCreator"
        android:layout_marginLeft="8dp"
        app:layout_constraintHorizontal_bias="1.0"
        android:layout_marginBottom="51dp"
        app:layout_constraintBottom_toTopOf="@+id/edParticipants"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/edTime"
        app:layout_constraintVertical_bias="0.181" />

    <TextView
        android:id="@+id/textParticipants"
        android:layout_width="147dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        android:layout_marginStart="8dp"
        android:paddingLeft="16dp"
        android:text="Event Participants:"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintRight_toLeftOf="@+id/edParticipants"
        android:layout_marginRight="16dp"
        app:layout_constraintTop_toTopOf="@+id/textEventCreator"
        android:layout_marginTop="60dp"
        android:layout_marginBottom="8dp"
        app:layout_constraintBottom_toTopOf="@+id/BdeleteEvent"
        app:layout_constraintVertical_bias="0.095"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintHorizontal_bias="0.774" />

    <TextView
        android:id="@+id/edParticipants"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="32dp"
        android:layout_marginRight="32dp"
        android:fontFamily="serif"
        android:text="None"
        android:textStyle="bold"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginStart="8dp"
        app:layout_constraintLeft_toRightOf="@+id/textEventCreator"
        android:layout_marginLeft="8dp"
        app:layout_constraintHorizontal_bias="1.0"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/BaddFriend"
        android:layout_marginBottom="8dp"
        app:layout_constraintBottom_toTopOf="@+id/BdeleteEvent"
        app:layout_constraintVertical_bias="0.076" />

    <Button
        android:id="@+id/BdeleteEvent"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:text="Delete Event"
        android:visibility="invisible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/BaddFriend"
        app:layout_constraintVertical_bias="0.942" />

    <Button
        android:id="@+id/BaddFriend"
        android:layout_width="110dp"
        android:layout_height="31dp"
        android:text="Add Friend"
        android:textSize="10sp"
        android:visibility="visible"
        android:layout_marginTop="11dp"
        app:layout_constraintTop_toBottomOf="@+id/edQuestId"
        android:layout_marginRight="72dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toRightOf="@+id/edLocation"
        android:layout_marginLeft="8dp"
        app:layout_constraintHorizontal_bias="1.0" />

</android.support.constraint.ConstraintLayout>
