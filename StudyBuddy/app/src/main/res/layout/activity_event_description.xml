<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="uw.studybuddy.Events.EventDescription"
    android:background="@drawable/leaf_two">

    <TextView
        android:id="@+id/edCourse"
        android:layout_width="130dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="16dp"
        android:text="Course"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintHorizontal_bias="0.1"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <TextView
        android:id="@+id/edTitle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="32dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="32dp"
        android:layout_marginStart="32dp"
        android:layout_marginTop="0dp"
        android:fontFamily="serif"
        android:text="Title"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/edCourse"/>

    <TextView
        android:id="@+id/edDescription"
        android:layout_width="318dp"
        android:layout_height="31dp"
        android:layout_marginLeft="32dp"
        android:layout_marginStart="32dp"
        android:layout_marginTop="-1dp"
        android:text="Description"
        android:textSize="18sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/edTitle"/>

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="32dp"
        android:layout_marginTop="12dp"
        android:text="Location:"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/edDescription"/>

    <TextView
        android:id="@+id/edLocation"
        android:layout_width="283dp"
        android:layout_height="33dp"
        android:layout_marginLeft="0dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="0dp"
        android:layout_weight="1"
        android:gravity="center_vertical"
        android:text="Location"
        android:textSize="18sp"
        app:layout_constraintHorizontal_bias="0.32"
        app:layout_constraintLeft_toRightOf="@+id/btnOpenMap"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView"/>

    <Button
        android:id="@+id/btnOpenMap"
        android:layout_width="36dp"
        android:layout_height="34dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="32dp"
        android:layout_weight="0.01"
        android:drawableRight="@android:drawable/ic_dialog_map"
        android:layout_marginLeft="32dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="0dp"
        app:layout_constraintTop_toBottomOf="@+id/textView"/>
        <!--android:onClick="process"-->

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="32dp"
        android:layout_marginTop="10dp"
        android:text="Date:"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnOpenMap"/>

    <TextView
        android:id="@+id/edDate"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="32dp"
        android:layout_marginStart="32dp"
        android:layout_marginTop="11dp"
        android:text="date"
        android:textSize="18sp"
        app:layout_constraintLeft_toRightOf="@+id/textView5"
        app:layout_constraintTop_toBottomOf="@+id/edLocation"/>

    <TextView
        android:id="@+id/edTime"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="7dp"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="8dp"
        android:text="time"
        android:textSize="18sp"
        app:layout_constraintBottom_toTopOf="@+id/textEventCreator"
        app:layout_constraintLeft_toRightOf="@+id/textView6"
        app:layout_constraintTop_toBottomOf="@+id/edDate"
        app:layout_constraintVertical_bias="0.125"/>

    <TextView
        android:id="@+id/textView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="29dp"
        android:layout_marginTop="11dp"
        android:text="Time:"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView5"/>

    <TextView
        android:id="@+id/textEventCreator"
        android:layout_width="153dp"
        android:layout_height="23dp"
        android:layout_marginLeft="32dp"
        android:layout_marginRight="8dp"
        android:layout_marginStart="32dp"
        android:layout_marginTop="29dp"
        android:text="Event Created By:"

        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/edQuestId"
        app:layout_constraintTop_toBottomOf="@+id/textView6"
        app:layout_constraintVertical_chainStyle="spread"/>

    <TextView
        android:id="@+id/edQuestId"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_marginRight="32dp"
        android:layout_marginTop="28dp"
        android:fontFamily="serif"
        android:text="TextView"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/edTime"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="@+id/BaddFriend"
        app:layout_constraintHorizontal_bias="1.0"/>

    <TextView
        android:id="@+id/textParticipants"
        android:layout_width="153dp"
        android:layout_height="62dp"
        android:layout_marginEnd="16dp"
        android:layout_marginLeft="32dp"
        android:layout_marginStart="32dp"
        android:layout_marginTop="52dp"
        android:text="Event Participants:"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textEventCreator"/>

    <TextView
        android:id="@+id/edParticipants"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="32dp"
        android:layout_marginStart="10dp"
        android:fontFamily="serif"
        android:text="None"
        android:textSize="18sp"
        android:textStyle="bold"
        android:layout_marginTop="19dp"
        app:layout_constraintTop_toBottomOf="@+id/BaddFriend"
        android:layout_marginRight="16dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toRightOf="@+id/textParticipants"
        android:layout_marginLeft="8dp"
        app:layout_constraintHorizontal_bias="0.36"/>

    <Button
        android:id="@+id/BdeleteEvent"
        android:layout_width="353dp"
        android:layout_height="47dp"

        android:text="Delete Event"
        android:visibility="invisible"
        tools:layout_editor_absoluteX="16dp"
        android:layout_marginTop="95dp"
        app:layout_constraintTop_toBottomOf="@+id/edParticipants"/>

    <Button
        android:id="@+id/BaddFriend"
        android:layout_width="110dp"
        android:layout_height="31dp"
        android:text="Add Friend"
        android:textSize="10sp"
        android:visibility="visible"
        android:layout_marginTop="-2dp"
        app:layout_constraintTop_toBottomOf="@+id/edQuestId"
        android:layout_marginLeft="3dp"
        app:layout_constraintLeft_toLeftOf="@+id/edParticipants"/>

</android.support.constraint.ConstraintLayout>
