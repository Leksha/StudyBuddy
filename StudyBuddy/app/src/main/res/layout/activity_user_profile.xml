<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="uw.studybuddy.UserProfileActivity">

    <TextView
        android:id="@+id/textView9"
        android:layout_width="164dp"
        android:layout_height="19dp"
        android:text="My Courses"
        android:textAlignment="center"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        tools:layout_editor_absoluteY="348dp"/>

    <TextView
        android:id="@+id/textView10"
        android:layout_width="164dp"
        android:layout_height="19dp"
        android:text="About me section"
        android:textAlignment="center"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        tools:layout_editor_absoluteY="436dp"/>

    <ImageView
        android:id="@+id/user_profile_image"
        android:layout_width="164dp"
        android:layout_height="162dp"
        app:srcCompat="@mipmap/profile_image_circle"
        tools:layout_editor_absoluteX="98dp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="33dp"/>

    <TextView
        android:id="@+id/user_profile_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="User Name"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/user_profile_image"
        app:layout_constraintHorizontal_bias="0.501"/>

    <TextView
        android:id="@+id/user_profile_name_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Name"
        android:textAlignment="center"
        android:textStyle="bold"
        app:layout_constraintHorizontal_bias="0.501"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        tools:layout_editor_absoluteY="242dp"/>

    <TextView
        android:id="@+id/user_profile_courses_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Courses"
        android:textAlignment="center"
        android:textStyle="bold"
        app:layout_constraintHorizontal_bias="0.501"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        tools:layout_editor_absoluteY="324dp"/>

    <TextView
        android:id="@+id/user_profile_about_me_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="About Me"
        android:textAlignment="center"
        android:textStyle="bold"
        app:layout_constraintHorizontal_bias="0.501"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        tools:layout_editor_absoluteY="405dp"/>

    <TextView
        android:id="@+id/user_profile_name"
        android:layout_width="164dp"
        android:layout_height="19dp"
        android:text="User Name"
        android:textAlignment="center"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        tools:layout_editor_absoluteY="270dp"/>
</android.support.constraint.ConstraintLayout>
