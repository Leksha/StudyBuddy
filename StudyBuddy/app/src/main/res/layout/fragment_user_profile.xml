<android.support.v7.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
                                             xmlns:app="http://schemas.android.com/apk/res-auto"
                                             xmlns:tools="http://schemas.android.com/tools"
             android:layout_width="match_parent"
             android:layout_height="match_parent"
             tools:context="uw.studybuddy.UserProfile.UserProfileFragment"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/user_profile_image"
        android:layout_width="147dp"
        android:layout_height="121dp"
        android:src="@drawable/harry_potter_user_image"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="16dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_gravity="center_horizontal"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:orientation="horizontal">
        <EditText
            android:id="@+id/user_profile_display_name"
            android:layout_width="wrap_content"
            android:layout_height="17dp"
            android:background="@android:color/transparent"
            android:text="User Name"
            android:textSize="12sp"
            android:inputType="textPersonName"
            android:imeOptions="actionDone"
            android:windowSoftInputMode="stateHidden"
            android:layout_gravity="center_horizontal"
            app:layout_constraintTop_toBottomOf="@+id/user_profile_image"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"/>

        <Button
            android:id="@+id/user_display_name_edit_button"
            android:layout_width="18dp"
            android:layout_height="18dp"
            android:background="@mipmap/edit_icon"/>

    </LinearLayout>

    <!-- User Name -->
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="29dp"
        android:layout_marginTop="19dp">

        <TextView
            android:id="@+id/user_profile_name_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Name"
            android:textAllCaps="true"
            android:textStyle="bold"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginRight="6dp"
            android:layout_marginBottom="0dp"/>

        <Button
            android:id="@+id/user_name_edit_button"
            android:layout_width="29dp"
            android:layout_height="29dp"
            android:background="@mipmap/edit_icon"/>
    </LinearLayout>


    <EditText
        android:id="@+id/user_profile_name"
        android:layout_marginLeft="29dp"
        android:layout_width="327dp"
        android:layout_height="42dp"
        android:text="User Name"
        android:textAlignment="center"
        android:textSize="15sp"
        android:imeOptions="actionDone"
        android:inputType="textPersonName"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="5dp"/>


    <!-- Courses -->
    <TextView
        android:id="@+id/user_profile_courses_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="29dp"
        android:layout_marginTop="10dp"
        android:text="Courses"
        android:textAlignment="center"
        android:textAllCaps="true"
        android:textStyle="bold"/>

    <HorizontalScrollView
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="29dp"
        android:layout_marginRight="29dp"
        android:layout_marginTop="5dp">

        <LinearLayout
            android:id="@+id/user_profile_courses_linear_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="0dp"
            android:orientation="horizontal">
        </LinearLayout>

    </HorizontalScrollView>


    <!-- About Me -->
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="29dp"
        android:layout_marginTop="19dp">

        <TextView
            android:id="@+id/user_profile_about_me_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="About Me"
            android:textAlignment="center"
            android:textAllCaps="true"
            android:textStyle="bold"
            android:layout_marginRight="6dp"/>
        <Button
            android:id="@+id/user_about_me_edit_button"
            android:layout_width="29dp"
            android:layout_height="29dp"
            android:background="@mipmap/edit_icon"/>

    </LinearLayout>


    <EditText
        android:id="@+id/user_profile_about_me"
        android:layout_marginLeft="29dp"
        android:layout_marginTop="5dp"
        android:layout_width="330dp"
        android:layout_height="113dp"
        android:inputType="textMultiLine"
        android:text="About me section"
        android:textAlignment="center"
        android:textSize="15sp"
        android:visibility="visible"
        android:imeOptions="actionDone"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="16dp"/>

</android.support.v7.widget.LinearLayoutCompat>
