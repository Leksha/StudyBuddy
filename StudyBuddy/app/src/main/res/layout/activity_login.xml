<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="uw.studybuddy.LoginActivity"
    tools:layout_editor_absoluteY="81dp"
    tools:layout_editor_absoluteX="0dp"
    android:background="@color/white">
    <ImageView
        android:layout_width="224dp"
        android:layout_height="803dp"
        android:src="@drawable/sign_in_half"
        tools:layout_editor_absoluteY="-134dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"/>

    <EditText
        android:id="@+id/etEmailLogin"
        android:layout_width="204dp"
        android:layout_height="45dp"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="284dp"
        android:background="@color/white"
        android:ems="10"
        android:hint="  Email Address"
        android:inputType="textEmailAddress"
        android:textAlignment="textStart"
        android:textColor="@android:color/holo_orange_dark"
        android:textSize="14sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <EditText
        android:id="@+id/etPasswordLogin"
        android:layout_width="203dp"
        android:layout_height="45dp"
        android:background="@color/white"
        android:ems="10"
        android:hint="  Password"
        android:inputType="textPassword"
        android:textAlignment="textStart"
        android:textColor="@android:color/holo_orange_dark"
        android:textSize="14sp"
        android:layout_marginLeft="16dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/etEmailLogin"/>

    <CheckBox
        android:id="@+id/cbShowPSD"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:fontFamily="sans-serif"
        android:text="show password"
        android:textAppearance="@style/TextAppearance.AppCompat.Body2"
        android:textSize="14sp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/etPasswordLogin"/>

    <Button
        android:id="@+id/bSubmit"
        android:layout_width="89dp"
        android:layout_height="39dp"
        android:background="@color/white"
        android:onClick="Login"
        android:text="Login"
        android:layout_marginLeft="130dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="12dp"
        app:layout_constraintTop_toBottomOf="@+id/cbShowPSD"
        android:layout_marginBottom="8dp"
        app:layout_constraintBottom_toTopOf="@+id/tvForgetPSD"/>

    <TextView
        android:id="@+id/tvForgetPSD"
        android:layout_width="150dp"
        android:layout_height="30dp"
        android:fontFamily="sans-serif"
        android:onClick="GotoReset"
        android:text="Forgot Password?"
        android:textAppearance="@style/TextAppearance.AppCompat.Body2"
        android:textSize="14sp"
        android:layout_marginLeft="16dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginBottom="8dp"
        app:layout_constraintBottom_toTopOf="@+id/tvRegisterNow"/>

    <TextView
        android:id="@+id/tvRegisterNow"
        android:layout_width="138dp"
        android:layout_height="26dp"
        android:fontFamily="sans-serif"
        android:onClick="GotoRegister"
        android:text="Register Now"
        android:textAppearance="@style/TextAppearance.AppCompat.Body2"
        android:textSize="14sp"
        android:layout_marginLeft="16dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="8dp"/>

    <TextView
        android:id="@+id/tvTitleSignin"
        android:layout_width="135dp"
        android:layout_height="55dp"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="6dp"
        android:layout_marginTop="26dp"
        android:fontFamily="sans-serif-condensed"
        android:text="SIGN IN"
        android:textAlignment="center"
        android:textAppearance="@android:style/TextAppearance.Large"
        android:textSize="36sp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <ImageView
        android:id="@+id/user_sign_in_icon"
        android:layout_width="107dp"
        android:layout_height="106dp"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@+id/tvTitleSignin"
        app:srcCompat="@drawable/sign_in_user_icon"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"/>
</android.support.constraint.ConstraintLayout>
