<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginLeft="10dp"
    android:layout_marginRight="10dp"
    tools:context="uw.studybuddy.ResetPassword">

    <TextView
    android:id="@+id/textViewReset"
    android:layout_width="368dp"
    android:layout_height="wrap_content"
    android:gravity="center"
    android:text="Please check you email and reset the password"
    android:typeface="serif"
    android:textSize="30dp"/>


    <EditText
        android:layout_width="368dp"
        android:layout_height="wrap_content"
        android:typeface="serif"
        android:textSize="30dp"
        android:id="@+id/ResetEmail"
        android:layout_marginTop="40dp"
        app:layout_constraintTop_toBottomOf="@+id/textViewReset"
        android:hint="Please type your email"
        android:gravity="center_horizontal" />

    <Button
        android:layout_width="368dp"
        android:layout_height="wrap_content"
        android:text="Sent reset Email"
        android:typeface="serif"
        android:layout_gravity="center_vertical"
        android:layout_marginTop="180dp"
        app:layout_constraintTop_toBottomOf="@+id/textViewReset"
        android:onClick="SentResetEmail" />

    <TextView
        android:id="@+id/resentError"
        app:layout_constraintTop_toBottomOf="@id/ResetEmail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/errorhint"
        android:text="" />


</android.support.constraint.ConstraintLayout>
