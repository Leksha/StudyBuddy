<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="uw.studybuddy.ResetPassword">

    <TextView
    android:id="@+id/textViewReset"
    android:layout_width="368dp"
    android:layout_height="wrap_content"
    android:gravity="center"
    android:text="Please check you email and reset the password"
    android:typeface="serif"
    android:textSize="30dp"
        tools:layout_editor_absoluteY="0dp"
        tools:layout_editor_absoluteX="0dp" />


    <EditText
        android:layout_width="368dp"
        android:layout_height="wrap_content"
        android:typeface="serif"
        android:textSize="30dp"
        android:id="@+id/ResetEmail"
        android:layout_marginTop="40dp"
        app:layout_constraintTop_toBottomOf="@+id/textViewReset"
        android:hint="Please type your email"
        tools:layout_editor_absoluteX="8dp" />

    <Button
        android:layout_width="368dp"
        android:layout_height="wrap_content"
        android:text="Sent reset Email"
        android:typeface="serif"
        android:layout_gravity="center_vertical"
        android:layout_marginTop="180dp"
        app:layout_constraintTop_toBottomOf="@+id/textViewReset"
        android:onClick="SentResetEmail"
        tools:layout_editor_absoluteX="0dp" />





</android.support.constraint.ConstraintLayout>
