<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="uw.studybuddy.LoginAndRegistration.ForgetPassword">


    <TextView
        android:id="@+id/resendresetcode"
        android:layout_width="368dp"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="The email has been send \n Please Enter the code"
        app:layout_constraintTop_toBottomOf="parent"
        android:layout_marginTop="50dp"
        android:typeface="serif"
        android:textSize="20dp" />


    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toRightOf="@+id/EnterResetCode"
        app:layout_constraintTop_toBottomOf="@+id/resendresetcode"
        app:layout_constraintRight_toRightOf="parent"
        android:text="Confirm"
        android:layout_marginLeft="10dp"
        android:onClick="ToResetPage"
        android:layout_marginTop="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="20dp" />

    <EditText
        android:id="@+id/EnterResetCode"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="Enter Code"
        android:textAppearance="@style/TextAppearance.AppCompat.Body2"
        android:textSize="24sp"
        android:typeface="serif"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="80dp"
        android:gravity="center"
        app:layout_constraintTop_toBottomOf="@+id/resendresetcode"
        app:layout_constraintHorizontal_bias="0.0"
        android:layout_marginStart="80dp" />

    <Button
        android:layout_width="368dp"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        android:text="Resent Email"
        android:layout_marginBottom="200dp"

        tools:layout_editor_absoluteX="8dp" />


</android.support.constraint.ConstraintLayout>
