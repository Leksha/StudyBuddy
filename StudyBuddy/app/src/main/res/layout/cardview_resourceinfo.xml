<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    xmlns:app="http://schemas.android.com/apk/res-auto"
                                    android:layout_marginLeft="10dp"
                                    android:layout_marginRight="10dp"
                                    android:layout_marginTop="10dp"
                                    app:layout_anchorGravity="center_horizontal">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="1"
        android:layout_marginTop="2dp"
        android:layout_marginBottom="2dp"
        android:layout_marginRight="2dp"
        android:gravity="center">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0.85"
            android:orientation="vertical">

            <TextView
                android:id="@+id/cardview_resource_course"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Course"
                android:textStyle="bold"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/cardview_resource_title_header"
                    android:layout_width="52dp"
                    android:layout_height="wrap_content"
                    android:text="Title: "
                    android:textStyle="bold"/>

                <TextView
                    android:id="@+id/cardview_resource_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="52dp"
                    android:layout_height="wrap_content"
                    android:text="By    :"
                    android:textStyle="bold"/>

                <TextView
                    android:id="@+id/cardview_resource_username"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="52dp"
                    android:layout_height="wrap_content"
                    android:text="Link :"
                    android:textStyle="bold"/>

                <TextView
                    android:id="@+id/cardview_resource_link"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="link"/>
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

        </LinearLayout>

        <Button
            android:id="@+id/cardview_resource_flag_button"
            android:layout_width="43dp"
            android:layout_height="wrap_content"
            android:background="@mipmap/ic_flag"/>
        <Button
            android:id="@+id/cardview_resource_delete"
            android:layout_width="43dp"
            android:layout_height="wrap_content"
            android:background="@mipmap/ic_delete"/>
        <Button
            android:id="@+id/cardview_resource_edit"
            android:layout_width="43dp"
            android:layout_height="wrap_content"
            android:background="@mipmap/ic_edit"/>
    </LinearLayout>

</android.support.v7.widget.CardView>
